<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/fitn"
        android:layout_width="414dp"
        android:layout_height="175dp"
        android:clickable="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/strngth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fitn" />

    <ImageView
        android:id="@+id/losewei"
        android:layout_width="420dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musclegain"
        app:srcCompat="@drawable/losewei" />

    <ImageView
        android:id="@+id/strngth"
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitn"
        app:srcCompat="@drawable/strngth" />

    <ImageView
        android:id="@+id/musclegain"
        android:layout_width="408dp"
        android:layout_height="152dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:contextClickable="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.285"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strngth"
        app:srcCompat="@drawable/musclegain" />


</androidx.constraintlayout.widget.ConstraintLayout>