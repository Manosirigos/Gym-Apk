        app:layout_constraintTop_toBottomOf="@+id/checkbox_local_fat_description" />

    <CheckBox
        android:id="@+id/checkbox_flexibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox_flexibility_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkbox_flexibility_description" />

    <TextView
        android:id="@+id/checkbox_flexibility_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/checkbox_flexibility_header"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/divider_6"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/checkbox_flexibility_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:text="@string/checkbox_flexibility_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_flexibility_header" />

    <View
        android:id="@+id/divider_7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#9F9F9F"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_flexibility_description" />

    <Button
        android:id="@+id/select_target_btn_confirm_selections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/select_target_btn_confirm_selections"
        app:layout_constraintTop_toBottomOf="@id/divider_7"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/select_target_btn_reset_selections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/select_target_btn_reset_selections"
        app:layout_constraintTop_toBottomOf="@id/divider_7"
        app:layout_constraintEnd_toStartOf="@+id/select_target_btn_confirm_selections"/>

